// Prisma schema for Quantum Mirror MVP
// Supports NextAuth + core product entities

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?
  timezone      String?  @default("UTC")
  createdAt     DateTime @default(now())

  accounts Account[]
  sessions SessionToken[]
  goals    Goal[]
}

model Goal {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  createdAt   DateTime @default(now())
  isActive    Boolean  @default(true)

  user     User     @relation(fields: [userId], references: [id])
  sessions Session[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  goalId    String
  dateKey   String   // YYYY-MM-DD
  status    String   @default("started") // "started" or "completed"
  createdAt DateTime @default(now())

  goal          Goal          @relation(fields: [goalId], references: [id])
  chatMessages  ChatMessage[]
  realityAnchors RealityAnchor[]
  actionTasks   ActionTask[]

  @@unique([userId, dateKey])
}

model ChatMessage {
  id        String   @id @default(cuid())
  sessionId String
  role      String   // "user", "assistant", "system"
  content   String
  createdAt DateTime @default(now())

  session Session @relation(fields: [sessionId], references: [id])
}

model RealityAnchor {
  id                 String   @id @default(cuid())
  sessionId          String
  imageUrl           String
  userContextText    String?
  aiFutureDeltasJson String?  // JSON stored as String
  aiNarrationText    String?
  createdAt          DateTime @default(now())

  session Session @relation(fields: [sessionId], references: [id])
}

model ActionTask {
  id               String   @id @default(cuid())
  sessionId        String
  title            String
  instructionsJson String   // JSON stored as String
  rationale        String
  estimatedMinutes Int
  requiresPhoto    Boolean  @default(true)
  createdAt        DateTime @default(now())
  completedAt      DateTime?

  session  Session         @relation(fields: [sessionId], references: [id])
  checkins ActionCheckin[]
}

model ActionCheckin {
  id             String   @id @default(cuid())
  actionTaskId   String
  photoUrl       String
  reflectionText String?
  aiFeedbackText String?
  createdAt      DateTime @default(now())

  actionTask ActionTask @relation(fields: [actionTaskId], references: [id])
}

// NextAuth models (prisma adapter)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model SessionToken {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
